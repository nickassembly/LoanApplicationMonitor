@page
@model LoanApplicationMonitor.WebApp.Pages.Loans.IndexModel
@{
    ViewData["Title"] = "Loans";
}

<h1>Loans</h1>

@if (!Model.Loans.Any())
{
    <p>No loans found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Applicant</th>
                <th>Loan Type</th>
                <th>Amount</th>
                <th>Credit Score</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model.Loans)
            {
                <tr>
                    <td><input type="checkbox" asp-for="@loan.IsSelected" /></td>
                    <td>@loan.ApplicantFullName</td>
                    <td>@loan.LoanType</td>
                    <td>@loan.LoanAmount</td>
                    <td>@loan.CreditScore</td>
                </tr>
            }
        </tbody>
    </table>
}
