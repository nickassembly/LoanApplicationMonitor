@page
@model IndexModel
@{
    ViewData["Title"] = "Services Health Status";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>System Name</th>
            <th>Status</th>
            <th>Message</th>
            <th>Completed At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var msg in Model.HealthMonitoringMessages)
        {
            <tr>
                <td>@msg.id</td>
                <td>@msg.systemName</td>
                <td>@msg.statusValue</td>
                <td>@msg.systemMessage</td>
                <td>@msg.testCompleted</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" asp-page="./Index" asp-route-pageNumber="@i">@i</a>
            </li>
        }

        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-page="./Index" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
        </li>
    </ul>
</nav>

